<script src="{{ asset('assets/js/partial-editor.js') }}"></script>

<span class="hidden" id="editor-type">{{ e_type }}</span>
<span class="hidden" id="editor-current-id">{% if e_type == 'update' %}{{ partial.id }}{% endif %}</span>

<h1>{{ e_title }}</h1>
<span class="pull-right">
    {% if e_type == 'create' %}
        <button type="button" class="btn btn-success" id="btn-submit" data-loading-text="saving...">
            Save
        </button>
    {% else %}
        <button type="button" class="btn btn-warning" id="btn-submit" data-loading-text="saving...">
            Update
        </button>
    {% endif %}
</span>

<div class="row">
    <div class="col-lg-10">

        <style type="text/css" media="screen">
            #editor {
                min-height: 400px;
            }

            #excerpt-editor {
                min-height: 100px;
            }
        </style>

        <form>
            <div class="form-group">
                <label for="input-title">Title</label>
                <input class="form-control" id="input-title" type="text" placeholder="Title" value="{{ e_partial.title|default('') }}">
            </div>
            <div class="form-group">
                <div id="editor">{{ e_partial.content|default('') }}</div>
            </div>
            <div class="form-group">
                <label>Options</label>
                <div class="checkbox">
                    <label>
                        <input id="cb-active" type="checkbox" data-toggle="toggle"
                            {% if e_partial.active|default(true) %}checked{% endif %}> Active?
                    </label>
                </div>
            </div>
        </form>

    </div>
</div>
