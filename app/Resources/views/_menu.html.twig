{% if mobile == false %}

    <ul>
        {% for page in pages %}
            {% if currentPage is not null and currentPage.id == page.id %}
                <li class="active">
            {% else %}
                <li>
            {% endif %}
                <a href="{{ path_safe(page.title|lower) }}">{{ page.title }}</a>
            </li>
        {% endfor %}
        <li>
            <a href="#" class="search-toggle"><i class="fa fa-search"></i></a>
        </li>
    </ul>

    <div class="search-form" style="display: none;">
        <form class="vnd-search-form" action="{{ path('_search_results') }}" method="get">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-8 col-md-4 col-md-offset-8">
                    <div class="input-group">
                        <input type="text" class="vnd-search-input form-control" placeholder="Search for..." name="q">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </form>
    </div>

{% else %}

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path_safe('index') }}">StaticAge</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    {% for page in pages %}
                        {% if currentPage is not null and currentPage.id == page.id %}
                            <li class="active">
                        {% else %}
                            <li>
                        {% endif %}
                            <a href="{{ path_safe(page.title|lower) }}">{{ page.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
                <form class="vnd-search-form navbar-form navbar-left" role="search" action="{{ path('_search_results') }}" method="get">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="input-group">
                                <input type="text" class="vnd-search-input form-control" placeholder="Search for..." name="q">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit">Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </form>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

{% endif %}
